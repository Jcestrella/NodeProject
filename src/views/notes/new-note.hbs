<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>New Note</h3>
        </div>
        <div class="card-body">
            <form action="/notes/new-note" , method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="Title" autofocus>
                </div>
                <div class="form-group">
                    <textarea name="description" placeholder="Description" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <div class="input-group mb-3">
                        <div class="custom-file">
                            <input type="file" id="image1" name="image" class="custom-file-input">
                            <label class="custom-file-label" id="fichero" for="inputGroupFile02"
                                aria-describedby="inputGroupFileAddon02">Choose file</label>
                            <script>
                                document.getElementById('image1').onchange = function () {
                                    console.log(this.value);
                                    document.getElementById('fichero').innerHTML = document.getElementById('image1').files[0].name;
                                }
                            </script>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>